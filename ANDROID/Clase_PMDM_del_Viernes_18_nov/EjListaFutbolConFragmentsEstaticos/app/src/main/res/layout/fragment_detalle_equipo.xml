<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.DetalleEquipoFragment" >

  <ImageView
    android:id="@+id/ivEscudoDetailFragment"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:layout_marginRight="8dp"
    android:adjustViewBounds="true"
    android:src="@mipmap/ic_launcher"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/tvNombreEquipoDetailFragment"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tvNombreEquipoDetailFragment"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="8dp"
    android:text="Nombre equipo"
    android:gravity="center_horizontal"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/ivEscudoDetailFragment"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/tvPuntosEquipoDetailFragment"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:text="Puntos"
    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
    android:textStyle="italic"
    app:layout_constraintEnd_toEndOf="@+id/tvNombreEquipoDetailFragment"
    app:layout_constraintStart_toStartOf="@+id/tvNombreEquipoDetailFragment"
    app:layout_constraintTop_toBottomOf="@+id/tvNombreEquipoDetailFragment" />
</androidx.constraintlayout.widget.ConstraintLayout>
